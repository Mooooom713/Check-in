page {
  background: #dcdcdc;
  height: 100%;
}

.info-wrap{
  width: 100%;
}

.info-container {
  width: 94%;
  height: 8rem;
  margin: 3% 0 0 3%;
  background: #f3f3f3;
  border-radius: 5px;
}

.block {
  padding-top: 20px;
  display: flex;
  flex-direction: row;
}

.block > label {
  flex: 0 0 40%;
  text-align: right;
}
.text{
  flex: 0 0 50%;
  padding-left: 10px;
  color: #ff8830;
}

.title-wrap {
  background:#f3f3f3;
  width:100%;
  height:1.8rem;
  line-height:1.8rem;
  margin-top:15px;
  padding-left:10px;
}