.block-wrap {
  width: 100%;
  margin-top: 20px;
}

.block-container {
  width: 94%;
  height: 2rem;
  margin: 3% 0 0 3%;
  background: #f3f3f3;
  border-radius: 5px;
  border: 1px solid #000000;
  display: flex;
  flex-direction: row;
}

.row-left {
  flex: 0 0 40%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.user-image {
  width: 20%;
  height: 80%;
  margin-right: 10px;
}

.row-right {
  flex: 0 0 60%;
  text-align: center;
  line-height: 2rem;
}