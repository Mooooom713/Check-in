.card-wrap {
  width: 100%;
}

.card-container {
  width: 92%;
  margin-left: 4%;
  margin-top: 4%;
  background: #f3f3f3;
  padding-bottom: 10px;
  display: flex;
  flex-direction: column;
}

.class-wrap,
.time-wrap,
.number-wrap {
  width: 100%;
  padding: 10px 0 10px 10px;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.label {
  flex: 0 0 30%;
  text-align: right;
}

.text {
  flex: 0 0 60%;
  color: #543fbe;
}

.btn {
  align-self: flex-end;
  margin: 0;
  margin-right: 10px;
  width: 30%;
  height: 1.4rem;
  line-height: 1.4rem;
  font-size: 1rem;
  color: #ffffff;
  border: 0px;
  background: #ff8830;
}